{
  "compilerOptions": {
    "target": "es2020",
    "module": "ES2020",        // Changed from "commonjs"
    "moduleResolution": "node", // Added this
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["mocha", "node"]
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}